<%= link_to("Add",:controller => 'content', :action => :edit, :id => params[:id], :content_id => nil) %>

<table border="1" cellpadding="5">   
    <tr>
        <th> Language </th>
        <th> Action </th>
    </tr>

    <% @task.contents.each do |task_content|%>    
    
    <tr align="center">            
        <td> <%= task_content.language.name %>  </td>
        <td>    
             <%= link_to("view",:controller => 'content', :action => :view, :id => @task.id, :task_content_id => task_content.id) %> /                              
             <%= link_to("edit",:controller => 'content', :action => :edit, :id => @task.id, :task_content_id => task_content.id) %> /                              
             <%= link_to("delete", {:controller => 'content', :action => :delete, :id => task_content.id}, {:confirm=>"Are you sure?"} ) %>            
        </td>
    </tr>
    
    <% end %>

</table>