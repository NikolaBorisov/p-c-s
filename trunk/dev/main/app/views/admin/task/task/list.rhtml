You have privileges on <%= @tasks.size() %> tasks: 

<p> </p>

<table border="1" cellpadding="5" >
    <tr>
        <th> Title </th>
        <th> Name </th>        
        <th> Owner </th>
        <th> Difficulty </th>
        <th> Action </th>
    </tr>
    
    <% @tasks.each do |task| %>
    <% owner = PCS::Model::User.find(task.owner_id).username %>
        <tr align="center" valign="middle">
            <td> <%= task.title %> </td>
            <td> <%= task.name %> </td>            
            <td> <%= owner %> </td>            
            <td> <%= task.difficulty %> </td>            
            <td> 
                <span style="font-size: small" >
                    <%= link_to("edit", :action => :edit, :id => task.id) %> <br>
                    <%= link_to("delete", {:action => :delete, :id => task.id}, {:confirm => "Are you sure?"} ) %>                    
                <span>
            </td>
        <tr>        

    <% end %>
<table>



