<%= form_tag(:id => params[:id]) %>
<fieldset>
    <legend>Edit Contest</legend>
    <p>
        <%= error_messages_for(:contest) %>
    </p>
    <p>
        <%= show_info %>
    </p>
    <p>
        <label for="contest">Contest Name</label>
        <%= text_field(:contest,:name) %>
    </p>
    <p>
        <label for="contest">Contest Title</label>
        <%= text_field(:contest,:title) %>
    </p>
    <p>
        <label for="contest">Start Time</label>
        <%= datetime_select(:contest,:start_time) %>
    </p>
    <p>
        <label for="contest">End Time</label>
        <%= datetime_select(:contest,:end_time) %>
    </p>
    <p>
        <label for="contest">Contest Type</label>
        <%= select(:contest, :contest_type_id, @contest_types.collect { |ct| [ct.name, ct.id] } ) %>
    </p>
    <p>
        <label for="contest">Board Type</label>
        <%= select(:contest, :board_type_id, @board_types.collect { |bt| [bt.name, bt.id] } ) %>
    </p>    
    <p>
        <%= submit_tag "Save Changes" %>
    </p>     
</fieldset>
<%= end_form_tag %>
<%= link_to('Tasks', :controller => "task", :action => "list", :id => @contest.id) %>
<%= link_to('Grade', :controller => "grade", :action => "index", :id => @contest.id) %>
<%= link_to('Mass Register(Beta)', :controller => "mass_register", :action => "create", :id => @contest.id) %>