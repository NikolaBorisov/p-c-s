<%= start_form_tag( {:controller => 'checker',:action => :edit, :id=>params[:id], :checker_id=>params[:checker_id]}, { :multipart => true } )%>

<fieldset style="width:200px">
<legend>Edit checker</legend>
    
   <label for="name">Name</label> </br>
   <%= text_field("checker","name") %>
   <p> </p>
    <label for="program_language">Language</label> </br>
    <%= select(:checker, :program_language_id, @program_languages) %>
   <p> </p>
    <label for="file">File</label> </br>
    <%= file_field_tag("file") %>        
    <p> </p>
    <%= submit_tag("Save", {:class=>"submit"} )%>
                
               
</fieldset>
    

<%= end_form_tag%>